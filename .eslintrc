{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": "off",
    "max-len": [1, 150],
    "no-return-await": "off",
    "import/extensions": [
      2,
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "^[~]",
          "^[/]",
          "^[src]",
          "^[configs]",
          "^[utils]"
        ]
      }
    ],
    "import/no-extraneous-dependencies": 0
  }
}
